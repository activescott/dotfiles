[user]
	email = scott@willeke.com
	name = Scott Willeke
	
[push]
	default = simple

[color]
	ui = true

[alias]
	outgoing = log @{upstream}.. #https://stackoverflow.com/a/6389348/51061
	st = status
	logg = log --pretty=oneline --abbrev-commit --graph --decorate --all
	logs = !TZ=America/Los_Angeles git log --oneline --decorate --color --all --pretty=format:\"%C(yellow)%h%C(reset)%C(auto)%d%C(reset) %C(green)%ad%C(reset) %C(blue)%an%C(reset) %s\" --date=format-local:'%Y-%m-%d %H:%M %z'
	logv = log --pretty=oneline --abbrev-commit --graph --decorate --all --show-signature
	who = shortlog -s
	serve = !git daemon --reuseaddr --verbose --base-path=. --export-all ./.git # https://git.wiki.kernel.org/index.php/Aliases#Serve_re

[core]
	autocrlf = input
	editor = code --wait

[diff]
	tool = default-difftool

[difftool "default-difftool"]
	cmd = code --disable-gpu --wait --diff $LOCAL $REMOTE

[hub]
	protocol = https

[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	required = true
	process = git-lfs filter-process

[merge "npm-merge-driver"]
	name = automatically merge npm lockfiles
	driver = npx npm-merge-driver merge %A %O %B %P

[init]
	defaultBranch = main

[pull]
	ff = only

[include]
	#path = .gitconfig.commit-signing-onlykey.include
	#path = .gitconfig.commit-signing-1p.include
	path = .gitconfig.commit-signing-local.include
